<%- include("./partials/header.ejs") -%>

<div id="filter" class="container-fluid">
    <button class="btn" id="filters" data-toggle="modal" data-target="#filterModal">Filters</button>
    
    <div class="modal fade" id="filterModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" 
    aria-hidden="true">
      <div class="modal-dialog" role="document">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="exampleModalLabel">Apply Filters</h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
          </div>
          <div class="modal-body">
            <form>
              <div class="form-group">
                <label for="recipient-name" class="col-form-label">Category:</label><br>
                <input type="radio" class="" id="all-category" name="category">
                <label for="recipient-name" class="col-form-label" value="all">All</label>
                <br>
                <input type="radio" class="" id="rent-category" name="category">
                <label for="recipient-name" class="col-form-label" value="rent">Rent</label>
                <br>
                <input type="radio" class="" id="buy-category" name="category">
                <label for="recipient-name" class="col-form-label" value="buy">Buy</label><br>
              </div>
              <hr>
              <div class="form-group">
                <label for="message-text" class="col-form-label">Courier provided:</label><br>
                <input type="radio" class="" id="yes-courier" name="courier">
                <label for="recipient-name" class="col-form-label" value="yes">Yes</label>
                <br>
                <input type="radio" class="" id="no-courier" name="courier">
                <label for="recipient-name" class="col-form-label" value="no">No</label>
                <br>
                <input type="radio" class="" id="nopreferenece-courier" name="courier">
                <label for="recipient-name" class="col-form-label" value="nopref">No Preference</label><br>
              </div>
            </form>
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-warning" data-dismiss="modal">Close</button>
            <button type="button" class="btn" id="modalFilter">Apply Filter</button>
          </div>
        </div>
      </div>
    </div>
    
    <form class="form-inline my-2 my-lg-0" id="search-form"
    method="GET" action="/search"
    >
        <input class="form-control mr-sm-2" type="search" 
        placeholder="<%=query%>" aria-label="Search"
        name="query"
        >
        <button class="btn btn-warning my-2 my-sm-0" type="submit">Search</button>
      </form>
            </div>

<%if(locals.error){%>
    <div><%=error%></div>
<%}%>

<div id="grid-book">   

    <div class="">
        <div class="row">
                
            <% if(locals.books){ %>

                <% for (var i =0; i <books.length;  i++ ) { %>
                
                  <div class="card bookcard" id=<%=books[i]._id%> style="width: 19rem;">
                      <img class="card-img-top" 
                      src=<%=books[i].imageUrl.substring(7,)%> 
                      alt="Card image cap"
                      width="19rem"
                      height="300"
                      >
                      <div class="card-body">
                        <h5 class="card-title" id="grid-book-row-1"><%=books[i].bookName%></h5>
                        <p class="card-text" id="grid-book-row-2"><%=books[i].author%></p>
                        <div class="card-text" id="grid-book-row-3">
                        
                        <div>Courier: <span id="" style="text-transform: capitalize;">  <%=books[i]._doc.courier%>   </span></div>
                        <div style="color:#8d8d8d;">| Location: 
                          <span id="location" style="color:#002347;"><%=books[i].location%></span></div>
                        </div>
                      <div id="grid-book-row-4">
                        <div class="price-btn">Price</div>
                      <div class="price"><span id="price">&#8377 <%=books[i].price%> </span><span> /Month</span></div>
                      </div>
                      
                      </div>
                    </div>
      
      
                  <%#  will output the numbers 1-10 %>
                  <% } %>
                  <%}%>
                  
                
        </div>
</div>
<%if(!locals.books){%>
    <div class="alert" role="alert" id="booknotfoundalert">
       <div>
           <h3>Ooo! No book related to <%=query%> found!</h3>
           <a href="/"><button class="btn" id="filters" >Home</button></a>
    </div> 
       
      </div>
<%}%>

<%- include("./partials/footer.ejs") -%>